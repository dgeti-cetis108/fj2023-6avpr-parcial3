<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaseDeListaV.Views.Examples.Flex"
             Title="Flex">
    <FlexLayout Direction="Row"
                JustifyContent="Center"
                AlignItems="Center"
                AlignContent="SpaceEvenly"
                Wrap="Wrap">
        <Button BackgroundColor="Red" Text="Botón 1"/>
        <Button x:Name="FlexButtonGrid"
                Clicked="FlexButtonGrid_Clicked"
                WidthRequest="200"
                BackgroundColor="Green"
                Text="Grid"/>
        <Button BackgroundColor="Blue" Text="Botón 3"/>
        <Button BackgroundColor="Red" Text="Botón 1"/>
        <Button BackgroundColor="Green" Text="Botón 2"/>
        <Button BackgroundColor="Blue" Text="Botón 3"/>
    </FlexLayout>
</ContentPage>
